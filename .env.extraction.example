# Requirements Extraction Tool Configuration
# Copy this file to .env.local and update with your values

# Application Settings
BASE_URL=http://localhost:3000

# Authentication
EXTRACT_EMAIL=your-email@medcontracthub.com
EXTRACT_PASSWORD=your-secure-password

# Extraction Settings
OUTPUT_DIR=./extracted-requirements
HEADLESS=true
MAX_OPPORTUNITIES=50
SCREENSHOT_ON_ERROR=false

# Advanced Settings (Optional)
EXTRACTION_TIMEOUT=300000  # 5 minutes per opportunity
RETRY_ATTEMPTS=3
CONCURRENT_DOCUMENTS=1
DEBUG_MODE=false