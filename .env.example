# MedContractHub Environment Variables
# Copy this file to .env.local and fill in your values

# ====================
# REQUIRED VARIABLES
# ====================

# Supabase Configuration
# Get these from: https://app.supabase.com/project/YOUR_PROJECT/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# External APIs
# SAM.gov API: https://api.sam.gov/prod/apikey/
SAM_GOV_API_KEY=your_sam_gov_api_key_here

# Anthropic API: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Resend Email API: https://resend.com/api-keys
RESEND_API_KEY=your_resend_api_key_here

# ====================
# OPTIONAL VARIABLES
# ====================

# AI Document Processing
# Mistral API: https://console.mistral.ai/
MISTRAL_API_KEY=your_mistral_api_key_here

# Web Search
# Brave Search API: https://api.search.brave.com/
BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here

# Authentication (OAuth)
# Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Stripe Billing
# Stripe Dashboard: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Redis Configuration (for local development)
REDIS_URL=redis://localhost:6379

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Email Configuration
FROM_EMAIL=noreply@medcontracthub.com
FROM_NAME=MedContractHub

# Security
CSRF_SECRET=generate-a-random-32-character-string-here

# Error Monitoring
# Sentry: https://sentry.io/
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here

# ====================
# PRODUCTION ONLY
# ====================

# Vercel Configuration (for deployments)
VERCEL_TOKEN=your_vercel_token_here
VERCEL_ORG_ID=your_vercel_org_id_here
VERCEL_PROJECT_ID=your_vercel_project_id_here

# Database URL (for migrations)
SUPABASE_DB_URL=postgres://postgres:YOUR_PASSWORD@db.YOUR_PROJECT.supabase.co:5432/postgres
SUPABASE_ACCESS_TOKEN=your_supabase_access_token_here