{
  "name": "@medcontracthub/analytics-service",
  "version": "1.0.0",
  "description": "Analytics Service - Event-driven analytics for MedContractHub",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "migrate": "node dist/migrations/run.js",
    "docker:build": "docker build -t medcontracthub/analytics-service:latest .",
    "docker:run": "docker run -p 8300:8300 medcontracthub/analytics-service:latest"
  },
  "dependencies": {
    "@clickhouse/client": "^0.2.10",
    "@kafkajs/confluent-schema-registry": "^3.3.0",
    "express": "^4.18.2",
    "kafkajs": "^2.2.4",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "dotenv": "^16.3.1",
    "ioredis": "^5.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}